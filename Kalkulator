    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            // TODO add your handling code here:
            Connection kon = DriverManager.getConnection("jdbc:mysql://localhost:3306/login_mysql","root","" );
            ResultSet as = kon.createStatement().executeQuery("select * from login where Username='"+namapengguna.getText()+"' and Password='"+passwordpengguna.getText()+"'");
//                    reateStatement()executeQuery();
            if(as.next()){
                admin ad = new admin();
                ad.setVisible(true);
                dispose();
        } else {
              JOptionPane.showMessageDialog(this, "Mohon maaf nama pengguna atau sandi salah");
//                      showMessageDialog(rootPane),("Masukkan Username dan password dengan benar !!");
        }
        
        
        
            
        } catch (SQLException ex) {
            Logger.getLogger(Login.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                        

